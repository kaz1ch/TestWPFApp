<Window x:Class="TestWPFApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestWPFApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Name="TestButton" Content="Кнопка" HorizontalAlignment="Left" Margin="369,228,0,0" VerticalAlignment="Top" Width="78" RenderTransformOrigin="0.5,0.5" Height="23">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform x:Name="ButtonRotator" Angle="0.0"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <Slider Name="RotateAngleSlider"
                HorizontalAlignment="Left"
                Margin="263,307,0,0"
                VerticalAlignment="Top"
                Minimum="-360"
                Maximum="+360"
                RenderTransformOrigin="0.5,-0.591"
                Width="300" ValueChanged="RotateAngleSlider_ValueChanged"/>

    </Grid>
</Window>
